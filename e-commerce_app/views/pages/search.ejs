<!DOCTYPE html>
<html>
    <head>
        <% include ../includes/header.ejs%>
    </head>

    <body>
        <% include ../includes/banner.ejs%>
        <div class="container text-center">
            <% for (product of products) {%>
                <h3><%= product.name %></h3>
                <img src="<%= product.pictureURL %>" alt="<%= product.name %>">
                <p>$<%= product.price %></p>
                <p><%= product.description %></p>
                <%if (product.specifications.length > 0) {%>
                <p>Specifications:</p>
                    <%for (specification of product.specifications){%>
                        <p><%= specification.specification %>: <%= specification.data %></p>
                        <%}%>
                    <%}%>
                <p>Tags: <%for (tag of product.tags){%>#<%= tag %> <%}%></p>
                <hr>
              <%}%>
        </div>
    </body>
</html>